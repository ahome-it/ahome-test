<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">

	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>classpath:/com/ait/ahome/server/config/log4j.xml</param-value>
	</context-param>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:/com/ait/ahome/server/config/AhomeApplicationContext.xml
			classpath:/com/ait/ahome/server/config/AhomeSQLApplicationContext.xml
			classpath:/com/ait/ahome/server/config/AhomeMongoDBApplicationContext.xml
			classpath:/com/ait/tooling/server/rpc/support/spring/RPCApplicationContext.xml
			classpath:/com/ait/tooling/server/sql/support/spring/SQLApplicationContext.xml
			classpath:/com/ait/tooling/server/mongodb/support/spring/MongoDBApplicationContext.xml
			classpath:/com/ait/tooling/server/core/support/spring/CoreApplicationContext.xml
		</param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
	<listener>
		<listener-class>com.ait.tooling.server.core.support.spring.CoreContextListener</listener-class>
	</listener>
	<filter>
		<filter-name>CacheControlFilter</filter-name>
		<filter-class>com.ait.tooling.server.core.filter.CacheControlFilter</filter-class>
	</filter>
	<filter>
		<filter-name>StrictTransportFilter</filter-name>
		<filter-class>com.ait.tooling.server.core.filter.StrictTransportFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>CacheControlFilter</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<filter-mapping>
		<filter-name>StrictTransportFilter</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<servlet>
		<servlet-name>JSONCommandRPCServlet</servlet-name>
		<servlet-class>com.ait.tooling.server.rpc.servlet.JSONCommandRPCServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>JSONCommandRPCServlet</servlet-name>
		<url-pattern>/JSONCommand.rpc</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

</web-app>
